{
  "name": "nudge",
  "version": "0.0.1",
  "description": "A lightweight self-motivation daemon that sends randomized, time-blocked messages throughout the day",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
     "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "keywords": ["telegram", "bot", "scheduler", "nudge", "reminder"],
  "author": {
    "name": "fatih guzel",
    "email": "hello@fatihguzel.dev",
    "url": "https://fatihguzel.dev"
  },
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.9",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "lint-staged": "15.5.2",
    "prettier": "3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "@types/nodemailer": "6.4.14",
    "nodemailer": "6.10.1"
  }
}
