{
  "name": "nudge",
  "version": "1.0.0",
  "description": "A lightweight self-motivation daemon that sends randomized, time-blocked messages throughout the day",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "watch": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "author": {
    "name": "fatih guzel",
    "email": "hello@fatihguzel.dev",
    "url": "https://fatihguzel.dev"
  },
  "license": "AGPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@types/luxon": "3.3.5",
    "@types/node": "20.11.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "lint-staged": "15.5.2",
    "prettier": "3.2.4",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@getbrevo/brevo": "3.0.1",
    "@types/nodemailer": "6.4.14",
    "dotenv": "17.2.1",
    "luxon": "3.7.1",
    "nodemailer": "6.10.1"
  }
}
